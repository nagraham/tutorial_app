<!-- Header indicates this goes at the top of the page
     and it has 3 CSS classes (separate by spaces).
     CSS classes can be multiple times on a page.
     CSS ids can only be used once.
     These navbar classes are specific to the Bootstrap Framework -->
<header class="navbar navbar-fixed-top navbar-inverse">

  <!-- divs are used by HTML to divide site into sections -->
  <div class="navbar-inner">
    <div class="container">
      <%= link_to 'tutorial app', root_path, id: 'logo' %>
      <nav>

        <ul class="nav pull-right">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Help', about_path %></li>

          <!-- Header information for users that are signed-in -->
          <% if signed_in? %>
            <li><%= link_to 'Users', '#' %></li>

            <!-- "Account" dropdown menu for users -->
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </li>

          <!-- Header info for users not signed in -->
          <% else %>
            <li><%= link_to 'Sign in', signin_path %></li>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>